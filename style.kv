<WeatherCard>
    padding: 4
    size_hint: None, None
    size_hint: 0.8, 0.8

    MDRelativeLayout:


        MDLabel:
            id: label
            text: '21121'
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True
<MainScreen>:
    MDBoxLayout:
        padding: '20sp'

        pos_hint: {'center_x': 0.5, 'top': 1}
        orientation: 'vertical'
        spacing: '20sp'
        WeatherCard:
            id: weathercard
        MDBoxLayout:
            size_hint: 1, None
            orientation: 'horizontal'
            spacing: '20sp'

            MDTextField:
                hint_text: "Round mode"
                mode: "round"
                max_text_length: 23
                helper_text: "Massage"
            MDFloatingActionButton:
                icon: "search-web"
                theme_icon_color: "Custom"

                md_bg_color: '#f0b105'

