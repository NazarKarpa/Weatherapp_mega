<WeatherCard>
    padding: 4
    size_hint: None, None
    size_hint: 1, 1

    MDBoxLayout:
        orientation: 'vertical'
        padding: '15sp'
        pos_hint: {'center_y':0.5}
        MDLabel:
            id: desc_text
            text: 'Хмарно'
            adaptive_size: True
            color: "grey"
            pos_hint: {'center_x':0.5}
            font_style: 'H4'
        AsyncImage:
            id: weather_icon
            pos_hint: {'center_x':0.5}

            size_hint: (None, None)
            height: '130sp'
            width: '180sp'
            fit_mode: 'contain'
        MDLabel:
            id: temp_text
            text: '21°C'
            adaptive_size: True
            color: "grey"
            pos_hint: {'center_x':0.5}
            font_style: 'H3'
        MDLabel:
            id: rain_text
            text: 'Йморівність опадів 25%'
            adaptive_size: True
            color: "grey"
            pos_hint: {'center_x':0.5}
            font_style: 'H6'
        MDLabel:
            id: wind_text
            text: 'Швидкість вітру 25м/с'
            adaptive_size: True
            color: "grey"
            pos_hint: {'center_x':0.5}
            font_style: 'H6'


<MainScreen>:
    MDBoxLayout:
        spacing: '15sp'
        orientation: 'vertical'
        MDTopAppBar:
            title: "MDTopAppBar"
            right_action_items: [["dots-vertical", lambda x: app.callback()]]
        MDBoxLayout:
            padding: '25sp'
            pos_hint: {'center_x': 0.5, 'top': 1}
            orientation: 'vertical'
            spacing: '20sp'

            MDBoxLayout:
                size_hint: 1, None
                orientation: 'horizontal'
                spacing: '20sp'
                MDTextField:
                    id: text_fell
                    hint_text: "Round mode"
                    mode: "round"
                    max_text_length: 23
                    helper_text: "Massage"
                MDFloatingActionButton:
                    id: search_button
                    icon: "search-web"
                    theme_icon_color: "Custom"
                    md_bg_color: '#f0b105'
                    on_press: root.weather_search()

            MDCarousel:
                id: weather_carousel
                direction: 'right'
                padding: '15sp'
                size_hint: 0.9, 0.8

